<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Nội dung bạn muốn hiển thị trong ScrollView -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed non diam tellus. Sed vehicula dui sit amet urna ullamcorper condimentum." />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/image1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click Me" />

        <!-- Thêm các phần tử khác bạn muốn -->

    </LinearLayout>
</ScrollView>




